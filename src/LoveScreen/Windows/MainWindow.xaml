<Window x:Class="LoveScreen.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoveScreen"
        mc:Ignorable="d"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="MainWindow" Height="300" Width="450" Background="#FFF3F3F3">
    <Grid>
        <!--托盘-->
        <tb:TaskbarIcon>
        </tb:TaskbarIcon>
        <TabControl Margin="10" FontSize="12">
            <TabItem Header="常规" Padding="10,3,10,3">
                <Grid Background="White"/>
            </TabItem>
            <TabItem Header="截图" Padding="10,3,10,3">
                <Grid Background="White"/>
            </TabItem>
            <TabItem Header="贴图" Padding="10,3,10,3">
                <Grid Background="White"/>
            </TabItem>
            <TabItem Header="输出" Padding="10,3,10,3">
                <Grid Background="White"/>
            </TabItem>
            <TabItem Header="热键" Padding="10,3,10,3">
                <Grid Background="White"/>
            </TabItem>
            <TabItem Header="关于" Padding="10,3,10,3">
                <Grid Background="White">
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
